{
  "name": "synaps-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "migrate": "knex migrate:latest --env production",
    "server": "nodemon index.js",
    "test": "jest --coverage --watch",
    "start": "node index.js",
    "api-docs": "apidoc -f .js -i ./routes -o apidoc/",
    "api-docs-staging": "apidoc -c staging -f .js -i ./routes -o doc-staging/",
    "api-docs-prod": "apidoc -c production -f .js -i ./routes -o doc-prod/",
    "build": "npm-run-all api-docs-staging api-docs-prod migrate",
    "coverage": " CI=true jest --coverage --detectOpenHandles --forceExit --passWithNoTests || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lambda-School-Labs/pt-synaps-be"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lambda-School-Labs/pt-synaps-be/issues"
  },
  "homepage": "https://production-lambda-synaps-be.herokuapp.com/",
  "dependencies": {
    "apidoc": "^0.20.0",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "cloudinary": "^1.19.0",
    "cors": "^2.8.5",
    "datauri": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "knex": "^0.20.4",
    "knex-cleaner": "^1.3.0",
    "multer": "^1.4.2",
    "npm-run-all": "^4.1.5",
    "pg": "^7.17.0",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "codeclimate-test-reporter": "^0.5.1"
  },
  "jest": {
    "rootDir": "./src",
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/apidoc/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.github/",
      "/coverage/"
    ]
  }
}
